@model MvcBoard.Models.Board

@{
    ViewBag.Title = "Details";
}


@using (Html.BeginForm("Delete", "Board", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id", Model.board_postNo)
    <div class="text-right">
        <input type="submit" value="삭제" class="btn btn-danger" onclick="return confirm('정말로 삭제하시겠습니까?')" />
    </div>
}


<table class="table table-striped">

    <tr>
        <th class="active">번호</th>
        <td style="width: 7%">@Model.board_postNo </td>
        <th class="activce">제목</th>
        <td style="width: 35%" class="subject align_l">@Model.board_subject</td>
        <th class="active">글쓴이</th>
        <td style="width: 8%">@Model.board_name</td>
        <th class="active">작성일</th>
        <td style="width: 10%">@Model.board_writeTime.ToShortDateString()</td>
        <th class="active">조회수</th>
        <td style="width: 7%">@Model.board_readCount</td>
    </tr>
    <tr style="border:solid;">
        <td colspan="10" width="100%;" height="500px;">
            @Html.Raw(@Model.board_content)
        </td>
    </tr>
</table>

<div class="text-center">
    @Html.ActionLink("수정", "Edit", new { id = Model.board_postNo }, new { @class = "btn btn-primary", @onclick = "return confirm('수정 하시겠습니까?')" })
    <button class="btn btn-success" onclick="history.go(-1);">목록</button>
</div>




