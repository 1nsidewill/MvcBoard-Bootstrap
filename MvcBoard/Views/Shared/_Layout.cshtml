<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="navbar-header">
                    @Html.ActionLink("홈", "Index", "Board", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <h1 style="text-align: center">BOARD</h1>
                <div class="navbar-right">
                    @Html.ActionLink("로그아웃", "LogOut", "Account", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            }

            else
            {
                <div class="navbar-header">
                    @Html.ActionLink("홈", "Index", "Board", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-right">
                    @Html.ActionLink("회원가입", "Register", "Account", new { area = "" }, new { @class = "navbar-brand" })
                    @Html.ActionLink("로그인", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - ASP.NET MVC Board</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
