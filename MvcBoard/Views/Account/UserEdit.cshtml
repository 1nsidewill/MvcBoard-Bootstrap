@model MvcBoard.Models.User

@{
    ViewBag.Title = "UserEdit";
}


<!doctype html>
<html lang="en">
<head>
    <title>회원정보 수정</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/signup-form-14/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-6">
                    <div class="login-wrap">
                        <h3 class="mb-4 text-center">개인정보 수정</h3>
                        @using (Html.BeginForm("UserEdit", "Account", FormMethod.Post, new { @class = "signup-form" }))
                        {
                            @Html.AntiForgeryToken()


                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control", @placeholder = "Password" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group d-flex">
                                        <button type="submit" class="btn btn-primary rounded submit p-3" onclick="return Confirm('개인정보를 수정하시겠습니까?')">확인</button>
                                    </div>
                                </div>
                            </div>
                        }


                        <div class="w-100 social-wrap">
                            <p class="mt-4">바꿀 필요 없어요! <a href="@Url.Action("Index", "Board")">돌아가기</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/signup-form-14/js/jquery.min.js"></script>
    <script src="~/signup-form-14/js/popper.js"></script>
    <script src="~/signup-form-14/js/bootstrap.min.js"></script>
    <script src="~/signup-form-14/js/main.js"></script>

</body>
</html>


